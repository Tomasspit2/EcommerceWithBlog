{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center" style="color: #fecea8">Edit Profile</h1>

    <section class="vh-90 mt-3 mb-3" style="background-color: #4A4A4A; color:#fecea8!important">
        <div class="container h-100 d-flex justify-content-between">
            <div class="mx-1 mx-md-4" style="width:60%">
                {{ form_start(form) }}
                <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                        {{ form_row(form.full_name) }}
                    </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                            {{ form_row(form.profilePhotoUrl, {'required': false}) }}
                    </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    {{ form_row(form.edit) }}
                </div>
            </div>
            {{ form_end(form) }}
            <div class="col-md-10 col-lg-6 col-xl-7 d-flex justify-content-end order-1 order-lg-2 " style="max-width: 500px; margin-left: 20px;">
                    <img id="uploadedPhoto" src="{{ user.profile_photo }}" class="uploadedPhoto img-fluid" style="height: fit-content!important;" alt="Article Image">
            </div>
        </div>
    </section>


    <a href="{{ path('app_article_index') }}">back to list</a>
{% endblock %}

{% block javascript %}
<script>
    const fileInput = document.getElementById('user_profilePhotoUrl');
    const existingImage = document.getElementById('uploadedPhoto');

    // Add event listener for file input change
    fileInput.addEventListener('change', function(event) {
    const selectedFile = event.target.files[0];
    if (selectedFile) {
    const reader = new FileReader();
    reader.onload = function() {
    existingImage.src = reader.result;
};

    reader.readAsDataURL(selectedFile);
}
});

</script>

{% endblock %}
